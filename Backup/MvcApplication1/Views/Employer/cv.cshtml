@model MvcApplication1.Models.ViewModels.CVModel

@{
    ViewBag.Title = "CV";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}

<h1>
    CV - @Model.user.FirstName &nbsp; @Model.user.LastName &nbsp;
</h1>

<h2>
    Candidate Profile
