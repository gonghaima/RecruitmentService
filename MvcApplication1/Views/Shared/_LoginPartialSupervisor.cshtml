@if (Request.IsAuthenticated) {
    <text>
        Logged in: @Html.ActionLink(User.Identity.Name, "SupervisorProfile", "Supervisor", routeValues: null, htmlAttributes: new { @class = "username", title = "Supervisor" })!
        @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()" class="myButton">Log off</a>
        }
    </text>
} else {
    <ul>
        <li>@Html.ActionLink("Register", "Register", "Supervisor", routeValues: null, htmlAttributes: new { id = "registerLink", @class="myButton" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Supervisor", routeValues: null, htmlAttributes: new { id = "loginLink", @class="myButton" })</li>
    </ul>
}
